<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="GersangStation.Main.WebViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gersangstation="using:GersangStation"
    xmlns:local="using:GersangStation.Main"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=gersangstation:WebViewManager}"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="Button_WebPreview_Back"
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    Click="Button_WebPreview_Back_Click"
                    IsEnabled="{x:Bind _webviewManager.CanGoBack, Mode=OneWay}"
                    Style="{StaticResource SubtleButtonStyle}">
                    <Viewbox Margin="2,0,2,0" Stretch="Uniform">
                        <SymbolIcon Symbol="Back" />
                    </Viewbox>
                </Button>
                <Button
                    x:Name="Button_WebPreview_Forward"
                    Grid.Column="1"
                    Width="40"
                    Height="40"
                    Click="Button_WebPreview_Forward_Click"
                    IsEnabled="{x:Bind _webviewManager.CanGoForward, Mode=OneWay}"
                    Style="{StaticResource SubtleButtonStyle}">
                    <Viewbox Margin="2,0,2,0" Stretch="Uniform">
                        <SymbolIcon Symbol="Forward" />
                    </Viewbox>
                </Button>
                <Button
                    x:Name="Button_WebPreview_Refresh"
                    Grid.Column="2"
                    Width="40"
                    Height="40"
                    Click="Button_WebPreview_Refresh_Click"
                    Style="{StaticResource SubtleButtonStyle}">
                    <Viewbox Margin="2,0,2,0" Stretch="Uniform">
                        <SymbolIcon Symbol="Refresh" />
                    </Viewbox>
                </Button>
                <Button
                    x:Name="Button_WebPreview_Home"
                    Grid.Column="3"
                    Width="40"
                    Height="40"
                    Click="Button_WebPreview_Home_Click"
                    Style="{StaticResource SubtleButtonStyle}">
                    <Viewbox Margin="2,0,2,0" Stretch="Uniform">
                        <SymbolIcon Symbol="Home" />
                    </Viewbox>
                </Button>
                <TextBox
                    Grid.Column="4"
                    Margin="10,6,10,6"
                    BorderBrush="LightGray"
                    PlaceholderText="웹 주소 검색"
                    Text="{x:Bind _webviewManager.CurrentSource, Mode=OneWay}" />
            </Grid>

            <WebView2
                x:Name="WebView"
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Visibility="Visible" />
        </Grid>
    </Grid>
</Page>
