<UserControl
    x:Class="GersangStation.Setup.BusyOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel
        Padding="16"
        Orientation="Vertical"
        Spacing="12">
        <TextBlock FontSize="20" Text="{x:Bind Title, Mode=OneWay}" />
        <ProgressBar
            IsIndeterminate="{x:Bind IsIndeterminate, Mode=OneWay}"
            Maximum="{x:Bind Maximum, Mode=OneWay}"
            Value="{x:Bind Value, Mode=OneWay}" />
        <TextBlock Opacity="0.7" Text="{x:Bind Message, Mode=OneWay}" />
    </StackPanel>
</UserControl>
